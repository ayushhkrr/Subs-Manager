# Database Configuration
MONGO_URI=mongodb://localhost:27017/subs-manager
# Or use MongoDB Atlas connection string:
# MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/subs-manager?retryWrites=true&w=majority

# Server Configuration
PORT=5000

# JWT Configuration
SECRET_KEY=your_jwt_secret_key_here_use_a_strong_random_string

# Stripe Configuration (Get from https://dashboard.stripe.com/test/apikeys)
# Use test keys for development (they start with sk_test_)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PRICE_ID=price_your_stripe_price_id_here

# Stripe Redirect URLs
SUCCESS_URL=http://localhost:3000/success
CANCEL_URL=http://localhost:3000/cancel

# SendGrid Configuration (Get from https://app.sendgrid.com/settings/api_keys)
# Sign up for free tier at https://sendgrid.com
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=your_verified_sender@example.com

# Client/Frontend URL (for CORS and email links)
CLIENT_URL=http://localhost:3000
